<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/styles.css">
</head>
<body>
    <%- include('./partials/navbar') %>

    <!-- Profile Section -->
    <div class="row">
        <%- include('./partials/sidebar') %>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8 main-content">
            <!-- Profile Section -->
            <section class="container mt-5">
                <h2 class="text-center mb-4">Profile</h2>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Username: <span id="username">JohnDoe</span></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Email: <span id="email">johndoe@example.com</span></h6>
                        <h6 class="card-subtitle mb-2 text-muted">Role: <span id="role">User</span></h6>
                        <h6 class="card-subtitle mb-2 text-muted">Allergies: <span id="allergies">None</span></h6>
                    </div>
                </div>
            </section>
            

            <hr>

        </div>
    </div>

    <script src="../js/bootstrap.bundle.min.js"></script>
</body>
</html>
