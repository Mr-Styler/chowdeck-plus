<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Website</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: your CSS file -->
</head>
<body>
    <!-- Navbar -->
    <nav>
        <a href="#" onclick="showLoginForm()">Login</a>
        <a href="#" onclick="showRegisterForm()">Register</a>
        <a href="#" onclick="fetchProfile()">Profile</a>
        <a href="#" onclick="logout()">Logout</a>
    </nav>

    <!-- Forms -->
    <div id="content">
        <!-- Login Form -->
        <div id="loginForm" style="display: none;">
            <h2>Login</h2>
            <form id="loginFormElement">
                <input type="email" id="loginEmail" placeholder="Email" required>
                <input type="password" id="loginPassword" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
        </div>

        <!-- Registration Form -->
        <div id="registerForm" style="display: none;">
            <h2>Register</h2>
            <form id="registerFormElement">
                <input type="text" id="registerUsername" placeholder="Username" required>
                <input type="email" id="registerEmail" placeholder="Email" required>
                <input type="password" id="registerPassword" placeholder="Password" required>
                <button type="submit">Register</button>
            </form>
        </div>

        <!-- Profile Section -->
        <div id="profileSection" style="display: none;">
            <h2>Your Profile</h2>
            <div id="profileContent"></div>
        </div>
    </div>

    <script src="/api.js"></script> <!-- Link your JavaScript file -->
</body>
</html>
